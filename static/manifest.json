{
	"manifest_version": 3,
	"name": "Highlight Convert",
	"version": "0.1",
	"description": "Convert units and currencies just by highlighting them",
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"content-script.js"
			]
		}
	],
	"action": {
		"default_title": "Click Me",
		"default_popup": "popup.html"
	},
	"background": {
    "service_worker": "background.js"
  },
	"permissions": ["storage"]
}
